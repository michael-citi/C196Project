<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michaelciti.c196project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddObjective"
            android:label="@string/title_activity_add_objective"
            android:parentActivityName=".ViewObjectives"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.michaelciti.c196project.ViewObjectives" />
        </activity>
        <activity
            android:name=".AddCourse"
            android:label="@string/title_activity_add_course"
            android:parentActivityName=".ViewCourses"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.michaelciti.c196project.ViewCourses" />
        </activity>
        <activity
            android:name=".AddTerm"
            android:label="@string/title_activity_add_term"
            android:parentActivityName=".ViewTerms"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.michaelciti.c196project.ViewTerms" />
        </activity>
        <activity
            android:name=".ViewObjectives"
            android:label="@string/title_activity_view_objectives"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.michaelciti.c196project.MainActivity" />
        </activity>
        <activity
            android:name=".ViewCourses"
            android:label="@string/title_activity_view_courses"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.michaelciti.c196project.MainActivity" />
        </activity>
        <activity
            android:name=".ViewTerms"
            android:label="@string/title_activity_view_terms"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.michaelciti.c196project.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>